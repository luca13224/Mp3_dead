<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/buttonAddSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:text="Thêm bài hát"/>
    <Button
        android:id="@+id/buttonDeleteSongs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/buttonAddSong"
        android:layout_margin="10dp"
        android:text="Xóa bài hát"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSearchThuVienMusic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/buttonAddSong"/>
</RelativeLayout>